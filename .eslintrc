{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "ENV": false
  },
  "plugins": [
    "react",
    "import"
  ],
  "rules": {
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "camelcase": 2,
    "consistent-return": 2,
    "guard-for-in": 2,
    "indent": [
      "error",
      2
    ],
    "no-debugger": 2,
    "no-magic-numbers": 2,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-var": 2,
    "one-var": [
      2,
      {
        "uninitialized": "always",
        "initialized": "never"
      }
    ],
    "operator-linebreak": [
      2,
      "after"
    ],
    "prefer-const": 2,
    "radix": [
      "error",
      "as-needed"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "strict": [
      2,
      "global"
    ],
    "import/imports-first": [
      "error",
      "absolute-first"
    ],
    "no-await-in-loop": "error",
    "no-console": "error",
    "no-empty": "error",
    "no-extra-parens": [
      "error",
      "all"
    ],
    "no-invalid-regexp": "error",
    "default-case": "error",
    "require-await": "error"
  }
}